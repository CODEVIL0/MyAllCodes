print("Type 1 if you have to convert Fahrenheit(°F) into Celcius(°C)")
print("Type 2 if you have to convert Celcius(°C) into Fahrenheit(°F)")
print("\n")
time.sleep(2) 
choice = int(input("Your Choice 1/2: "))
print("\n")

if choice == 1:
    f = float(input("Type Value Of Fahrenheit (without °F): "))
    c = 5/9*(f-32)
    print("\n")
    res1 = print("Value In Celcius : %0.3f°C"% (c))
    print("\n")
    time.sleep(2)
    print("Thank You For Using My Code😃")
