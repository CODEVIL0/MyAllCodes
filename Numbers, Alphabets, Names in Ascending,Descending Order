import time
time.sleep(2) 
print("\n") 

print("Type 1 For Numbers")
print("Type 2 For Alphabets/Names") 

time.sleep(2) 
print("\n") 

type = int(input("Your Type: "))

print("\n") 

if type == 1:
    print("Type 1 For Ascending Order") 
    print("Type 2 For Descending Order") 
    print("\n")
    time.sleep(2) 
    type1 = int(input("Your Type: "))
    print("\n")
    if type1 == 1:
        z = list(map(int,input("Enter Multiple Numbers (Seperated by space) : ").split())) 
        z.sort() 
        print("\n")
        print("Numbers in Ascending Order: ",z)
        time.sleep(2)
        print("\n")
        print("Thank You For Using My Code😃")
        print("Give Feedback ☺ ( github.com/CODEVIL0 )")
        print("Goodbye👋")
    else:
        z = list(map(int,input("Enter Multiple Numbers [Seperated by space] : ").split())) 
        z.sort(reverse=True) 
        print("\n")
        print("Numbers in Descending Order: ",z)
        time.sleep(2)
        print("\n")
        print("Thank You For Using My Code😃")
        print("Give Feedback ☺ ( github.com/CODEVIL0 )")
        print("Goodbye👋")
else:
    print("Type 1 For Ascending Order") 
    print("Type 2 For Descending Order") 
    print("\n")
    time.sleep(2) 
    type1 = int(input("Your Type: "))
    if type1 == 1:
        z = list(map(str,input("Enter Multiple Alpha bets/Names (Seperated by space) : ").split())) 
        z.sort() 
        print("\n")
        print("Alphabets/Names in Ascending Order: ",z) 
        time.sleep(2)
        print("\n")
        print("Thank You For Using My Code😃")
        print("Give Feedback ☺ ( github.com/CODEVIL0 )")
        print("Goodbye👋")
    else:
        z = list(map(str,input("Enter Multiple Alphabets/Names [Seperated by space] : ").split())) 
        z.sort(reverse=True)
        print("\n") 
        print("Alphabets/Names in Descending Order: ",z)
        time.sleep(2)
        print("\n")
        print("Thank You For Using My Code😃")
        print("Give Feedback ☺ ( github.com/CODEVIL0 )")
        print("Goodbye👋")
